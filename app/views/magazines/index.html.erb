<p id="notice"><%= notice %></p>

<h1>Magazines</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @magazines.each do |magazine| %>
      <tr>
        <td><%= magazine.name %></td>
        <td><%= link_to 'Show', magazine, class: "btn btn-primary m-1" %></td>
        <td><%= link_to 'Edit', edit_magazine_path(magazine), class: "btn btn-primary m-1" %></td>
        <td><%= link_to 'Destroy', magazine, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger m-1" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

