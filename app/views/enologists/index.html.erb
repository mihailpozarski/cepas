<p id="notice"><%= notice %></p>

<h1>Enologists</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Nationality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enologists.each do |enologist| %>
      <tr>
        <td><%= enologist.name %></td>
        <td><%= enologist.age %></td>
        <td><%= enologist.nationality %></td>
        <td><%= link_to 'Show', enologist, class: "btn btn-primary m-1" %></td>
        <td><%= link_to 'Edit', edit_enologist_path(enologist), class: "btn btn-primary m-1" %></td>
        <td><%= link_to 'Destroy', enologist, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger m-1" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

