<p id="notice"><%= notice %></p>

<h1>Strains</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @strains.each do |strain| %>
      <tr>
        <td><%= strain.name %></td>
        <td><%= link_to 'Show', strain, class: "btn btn-primary m-1" %></td>
        <td><%= link_to 'Edit', edit_strain_path(strain), class: "btn btn-primary m-1" %></td>
        <td><%= link_to 'Destroy', strain, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger m-1" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

