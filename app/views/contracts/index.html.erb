<p id="notice"><%= notice %></p>

<h1>Contracts</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Magazine</th>
      <th>Enologist</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.magazine.name %></td>
        <td><%= contract.enologist.name %></td>
        <td><%= contract.position.name %></td>
        <td><%= link_to 'Show', contract, class: "btn btn-primary m-1" %></td>
        <td><%= link_to 'Edit', edit_contract_path(contract), class: "btn btn-primary m-1" %></td>
        <td><%= link_to 'Destroy', contract, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger m-1" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contract', new_contract_path, class: "btn btn-primary m-1" %>
