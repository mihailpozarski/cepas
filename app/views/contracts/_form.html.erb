    <%= form.label :enologists %>
    <%= form.collection_select(:enologist_id, Enologist.all, :id, :name, {}, {class: "form-control"}) %>
  </div>

  <div class="field form-group">
    <%= form.label :position %>
    <%= form.collection_select(:position_id, Position.all, :id, :name, {}, {class: "form-control"}) %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Contract', class: "btn btn-primary" %>
  </div>
<% end %>
