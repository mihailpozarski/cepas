<p id="notice"><%= notice %></p>

<h1>Positions</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.name %></td>
        <td><%= link_to 'Show', position, class: "btn btn-primary m-1" %></td>
        <td><%= link_to 'Edit', edit_position_path(position), class: "btn btn-primary m-1" %></td>
        <td><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger m-1" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

