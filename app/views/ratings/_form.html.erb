    <%= form.label :wines %>
    <%= form.collection_select(:wine_id, Wine.all, :id, :name, {}, {class: 'form-control'}) %>
  </div>

  <div class="field form-group">
    <%= form.label :enologists %>
  <%= form.collection_select(:enologist_id, Enologist.all, :id, :name, {}, {class: 'form-control'}) %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Rating', class: "btn btn-primary" %>
  </div>
<% end %>
