<p id="notice"><%= notice %></p>

<h1>Ratings</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Enologist</th>
      <th>Wine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.score %></td>
        <td><%= rating.enologist.name %></td>
        <td><%= rating.wine.name %></td>
        <td><%= link_to 'Show', rating, class: "btn btn-primary m-1" %></td>
        <td><%= link_to 'Edit', edit_rating_path(rating), class: "btn btn-primary m-1" %></td>
        <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger m-1" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

