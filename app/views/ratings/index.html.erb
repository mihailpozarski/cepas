<p id="notice"><%= notice %></p>

<h1>Ratings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Enologist</th>
      <th>Wine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.score %></td>
        <td><%= rating.enologist.name %></td>
        <td><%= rating.wine.name %></td>
        <td><%= link_to 'Show', rating %></td>
        <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
        <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rating', new_rating_path %>
<%= link_to 'Strains', strains_path %>
<%= link_to 'Enologists', enologists_path %>
<%= link_to 'Magazines', magazines_path %>
<%= link_to 'Contracts', contracts_path %>
<%= link_to 'Positons', positions_path %>
